<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".master.InterfazMaster"
    android:background="@color/FondoMaster">

    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/secondView"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_toStartOf="@+id/secondView">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgMasterProfile"
            android:layout_width="120dp"
            android:layout_height="125dp"
            android:layout_marginTop="10dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="3dp" />

        <EditText
            android:id="@+id/txtNombreMasterProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:enabled="false"
            android:textSize="@dimen/tam_subtitulos"
            android:textStyle="bold"
            android:ems="10"
            android:gravity="center"
            android:textColor="#2A6171"
            android:autofillHints="Nombre Usuario"
            android:inputType="textPersonName"
            tools:ignore="LabelFor"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/txtApellidoMasterProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:enabled="false"
            android:gravity="center"
            android:textSize="@dimen/tam_subtitulos"
            android:textStyle="bold"
            android:ems="10"
            android:textColor="#2A6171"
            android:autofillHints="Apellido Usuario"
            tools:targetApi="o"
            android:inputType="textPersonName"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/txtTelefonoMasterProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:enabled="false"
            android:gravity="center"
            android:textSize="@dimen/tam_subtitulos"
            android:ems="10"
            android:textStyle="bold"
            android:autofillHints="Telefono Usuario"
            android:textColor="#2A6171"
            android:inputType="phone"
            tools:ignore="LabelFor"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/txtPasswordMasterProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:enabled="false"
            android:textSize="@dimen/tam_subtitulos"
            android:autofillHints="Password Usuario"
            android:textStyle="bold"
            android:textColor="#2A6171"
            android:gravity="center"
            android:ems="10"
            tools:targetApi="o"
            android:inputType="textPersonName"
            tools:ignore="LabelFor,TextFields" />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="15dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@color/SecundarioMaster">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:targetApi="o">

                    <ImageButton
                        android:id="@+id/btnTomarFotoMasterProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/editphoto"
                        android:clickable="false"
                        android:contentDescription="TODO"
                        tools:ignore="ContentDescription,HardcodedText" />

                    <TextView
                        android:id="@+id/lblFotoMasterProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tomar Foto"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#2A6171"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:targetApi="o">

                    <ImageButton
                        android:id="@+id/btnEnableEditMasterProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/editmaster"
                        android:contentDescription="TODO"
                        tools:ignore="ContentDescription,HardcodedText" />

                    <TextView
                        android:id="@+id/lblHabilitarMasterProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Habilitar Edicion"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#2A6171"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:targetApi="o">

                    <ImageButton
                        android:id="@+id/btnGuardarCambiosMasterProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/savedata"
                        android:contentDescription="TODO"
                        tools:ignore="ContentDescription,HardcodedText" />

                    <TextView
                        android:id="@+id/lblGuardarMasterProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guardar Cambios"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#2A6171"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>

    <View android:id="@+id/secondView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:id="@+id/thirdLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/secondView"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/lblDashMasterProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DashBoard"
            android:textColor="#2A6171"
            android:textSize="@dimen/tam_titulos"
            android:textStyle="bold"
            tools:ignore="HardcodedText,SpUsage" />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/SecundarioMaster"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/btnCreateChildProfileMaster"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/addchild"
                            android:contentDescription="TODO"
                            tools:ignore="ContentDescription,HardcodedText" />

                        <TextView
                            android:id="@+id/lblAgregarNinoMasterProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textSize="20sp"
                            android:text="Agregar Nin@"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/btnListadoNinosMaster"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/listchild"
                            android:contentDescription="TODO"
                            tools:ignore="ContentDescription,HardcodedText" />

                        <TextView
                            android:id="@+id/lblListadoNinoMaster"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Listado de Ninos"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/btnCreateTerapistaProfileMaster"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/adduser"
                            android:contentDescription="TODO"
                            tools:ignore="ContentDescription,HardcodedText" />

                        <TextView
                            android:id="@+id/lblAgregarTerapistaMasterProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Agregar un Tr."
                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/btnListadoTerapistaProfileMaster"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/listuser"
                            android:contentDescription="TODO"
                            tools:ignore="ContentDescription,HardcodedText" />

                        <TextView
                            android:id="@+id/lblListadoTerapistasProfileMaster"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Listado de Tr."
                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables,UselessParent">

                        <ImageView
                            android:id="@+id/btnLogOutMasterProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/exitacount"
                            android:contentDescription="TODO"
                            tools:ignore="ContentDescription,HardcodedText" />

                        <TextView
                            android:id="@+id/lblLogOutMasterProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Cerrar Sesion"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>



</RelativeLayout>