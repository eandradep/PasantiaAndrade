<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/JuegoDos"
    tools:context=".terapista.fragment.juegos.atencionyconcetracion.JuegoParejas">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/linearLayout">

        <ImageButton
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@drawable/salir"
            android:id="@+id/btnSalirPares"
            android:layout_marginRight="10sp"/>
        <TextView
            android:id="@+id/lblTituloJuegoDos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Encuentra el Par "
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold|italic" />
        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:visibility="invisible"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgStaticUno"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="21dp" />

    <ImageView
        android:id="@+id/imgStaticDos"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/imgStaticUno"
        android:layout_marginEnd="198dp"
        android:layout_marginRight="198dp"
        android:layout_toLeftOf="@+id/imgStaticTres"
        android:layout_toStartOf="@+id/imgStaticTres" />

    <ImageView
        android:id="@+id/imgStaticTres"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imgStaticDos"
        android:layout_marginEnd="122dp"
        android:layout_marginRight="122dp" />

    <ImageView
        android:id="@+id/imgMovUno"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="350dp" />

    <ImageView
        android:id="@+id/imgMovDos"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="450dp"/>

    <ImageView
        android:id="@+id/imgMovTres"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="750dp" />



</RelativeLayout>