<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".master.terapista.RegistroTerapista">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/SecundarioMaster"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/firstLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/secondView"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgRegisterTerapista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="40dp"
                android:src="@drawable/nouser"
                app:civ_border_color="#FF000000"
                app:civ_border_width="5dp" />

        </LinearLayout>

        <View
            android:id="@+id/secondView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:id="@+id/thirdLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/secondView"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <CheckBox
                android:id="@+id/checkBoxMaster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:enabled="false"
                android:text="Master"
                android:textSize="@dimen/tam_texto_ayuda_elementos"
                android:textColor="@color/colorLetras"
                android:textStyle="bold"
                tools:ignore="HardcodedText,UnusedAttribute" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtRegistroTerapistaNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7dp"
                    android:ems="10"
                    android:textSize="@dimen/tam_texto_ayuda_elementos"
                    android:gravity="center"
                    android:hint="Nombre Usuario"
                    android:inputType="textPersonName"
                    android:textColor="@color/colorLetras"
                    android:textStyle="bold"
                    tools:ignore="Autofill,HardcodedText,UnusedAttribute" />

                <EditText
                    android:id="@+id/txtRegistroTerapistaApellido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7dp"
                    android:ems="10"
                    android:textSize="@dimen/tam_texto_ayuda_elementos"
                    android:gravity="center"
                    android:hint="Apellido Usuario"
                    android:inputType="textPersonName"
                    android:textColor="@color/colorLetras"
                    android:textStyle="bold"
                    tools:ignore="Autofill,HardcodedText,UnusedAttribute" />

            </LinearLayout>


            <EditText
                android:id="@+id/txtRegistroTerapistaTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="@dimen/tam_texto_ayuda_elementos"
                android:gravity="center"
                android:hint="# Telefono Usuario"
                android:inputType="phone"
                android:textColor="@color/colorLetras"
                android:textStyle="bold"
                tools:ignore="Autofill,HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtRegistroTerapistaPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7dp"
                    android:ems="10"
                    android:textSize="@dimen/tam_texto_ayuda_elementos"
                    android:inputType="textPassword"
                    android:textColor="@color/colorLetras"
                    android:textStyle="bold"
                    tools:ignore="Autofill,LabelFor,UnusedAttribute" />

                <EditText
                    android:id="@+id/txtRegistroTerapistaPasswordC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7dp"
                    android:ems="10"
                    android:textSize="@dimen/tam_texto_ayuda_elementos"
                    android:inputType="textPassword"
                    android:textColor="@color/colorLetras"
                    android:textStyle="bold"
                    tools:ignore="Autofill,LabelFor,UnusedAttribute" />

            </LinearLayout>

            <TextView
                android:id="@+id/lblRegistroTerapistaPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password y Confirmacion"
                android:textColor="@color/colorLetras"
                android:textStyle="bold"
                android:textSize="@dimen/tam_texto_ayuda_elementos"
                tools:ignore="HardcodedText" />

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/SecundarioMaster"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UnusedAttribute">

                        <ImageButton
                            android:id="@+id/btnRegistrarTerapista"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/savedata"
                            android:contentDescription="BotonGuardar"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/lblRegistrarTerapista"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Registrar"
                            android:textSize="@dimen/tam_descripcion_botones"
                            android:textColor="@color/colorLetras"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,SpUsage" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UnusedAttribute">

                        <ImageButton
                            android:id="@+id/btnTomarFotoRegistroTerapista"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/editphoto"
                            android:contentDescription="Boton Tomar Fotos"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/lblTomarFotoRegistroTerapista"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TomarFotoPerfil"
                            android:textSize="@dimen/tam_descripcion_botones"
                            android:textColor="@color/colorLetras"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UnusedAttribute">

                        <ImageButton
                            android:id="@+id/btnCancelarRegistroTerapista"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cancelar"
                            android:clickable="false"
                            android:contentDescription="Boton Cancelar"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/lblCancelarRegistroTerapista"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cancelar"
                            android:textSize="@dimen/tam_descripcion_botones"
                            android:textColor="@color/colorLetras"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>